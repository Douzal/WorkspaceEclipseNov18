<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">
	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
	
	<!-- 
	<context:component-scan base-package="fr.afcepf.al32" />
	 -->
	
	<!-- 
	Avec @Service ou @Component, l'ir par défaut de composant spring
	est le nom de la classe commençant par une minuscule #idSpring, #serviceDeviseImpl
	-->
	 
	<!-- implementor fait le lien avec la classe java -->
	<jaxws:endpoint id="endPointDeService"
		implementor="ServiceDeviseImpl"
		address="/serviceDevise" />
		
	<!-- URL = http://localhost:8080/servSpringCxf/services/serviceDevise
		où /service est le url-pattern de CxfServlet dans web.xml -->
</beans>